

@model IEnumerable<InAndOut.Models.ExpensesModel>

    <h1>Index- items</h1>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expenses list</h2>
                
            </div>
            <div class="col-6">
               <a  asp-controller="Expenses" asp-action="Create" class="btn btn-primary "> Create new expense</a>
            </div>
        </div>
        @if(Model.Count()>0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-content-center">
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    
                    <th>
                        Options
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                           <td width="20%">@item.ExpenseName</td>
                           <td width="20%">@item.ExpenseAmount</td>  
                           <td width="40%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-route-Id="@item.Id" asp-controller="Expenses" asp-action="Update" class="btn btn-info mx-1 "> Update expense</a>
                                    <a asp-route-Id="@item.Id" asp-controller="Expenses" asp-action="Delete" class="btn btn-danger mx-1"> Delete expense</a>
                                </div>
                            

                           </td>  
                            
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


