

@model IEnumerable<InAndOut.Models.ExpensesCategoriesModel>

  

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expenses Categories list</h2>
                
            </div>
            <div class="col-6">
               <a  asp-controller="ExpensesCategories" asp-action="Create" class="btn btn-primary "> Create new expense category</a>
            </div>
        </div>
        @if(Model.Count()>0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-content-center">
                    <th>
                        Expense Category
                    </th>     
                    <th>
                        Options
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                           <td width="60%">@item.CategoryName</td>
                           <td width="40%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-route-id="@item.Id" asp-controller="ExpensesCategories" asp-action="Update" class="btn btn-info mx-1 "> Update expense</a>
                                    <a asp-controller="ExpensesCategories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"> Delete expense</a>
                                </div>
                           </td>  
                            
                    </tr>
                }
            </tbody>
        </table>
    }
    </div>


